<h1 class="mt-5 mb-4">Add New Product</h1>
<form action="/" method="post">
    
    <div class="mb-3">
        <label for="name" class="form-level">Product Name</label>
        <input type="text" class="form-control" id="name" name="name" required/>
    </div>

    <div class="mb-3">
        <label for="desc" class="form-level">Auther</label>
        <textarea rows="3" class="form-control" id="desc" name="desc" required ></textarea>
    </div>

    <div class="mb-3">
        <label for="price" class="form-level">Price</label>
        <input type="number" class="form-control" id="price" name="price" required/>
    </div>

    <div class="mb-3">
        <label for="imgUrl" class="form-level">Image URL</label>
        <input type="url" class="form-control" id="imgUrl" name="imgUrl" required/>
    </div>

    <button type="submit" class="btn btn-primary"> Add Product</button>
</form>